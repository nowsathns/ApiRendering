@model ApiRendering.Models.APIInput
@{
    ViewData["Title"] = "Vehicle Search";
}
@* <script src="~/lib/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script> *@

<div style="padding-top:10px;padding-bottom:25px;">
    <form id="vehForm" data-ajax="true" data-ajax-url="Home/VehicleSearch" data-ajax-method="post"
          data-ajax-update="#details">
        <h7><label style="color:darkblue"><b> Vehicle Number Search:</b></label></h7>
        <br />
        @Html.TextBoxFor(model => model.vehicleNumber,new { @style = "width:30% !important", @placeholder= "Vehicle Number (Eg.UP14DM2361)" })
        <br />
        @Html.ValidationMessageFor(model => model.vehicleNumber)
        <br/>
        <button class=" btn btn-primary mt-2" onclick="ShowLoader();" type="submit">Search</button>
    </form>
</div>
<div id="details" style="display: none;">
</div>

<script>
    function ShowLoader() {
        $("#details").html("");
        if ($("#vehForm").valid()) {
            $("#details").html("Loading...");
            $("#details").show();
        }
    }
</script>