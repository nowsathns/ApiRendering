@model ApiRendering.Models.APIInput
@{
    ViewData["Title"] = "Driving License Search";
}
<div style="padding-top:10px;min-height:300px;">
    <form action="~/Home/DLSearch" method="post">
       <b> License Number :</b>
        <br/>
        <br/>
            @Html.TextBoxFor(model => model.cardNumber, new { @style = "width:18% !important"})
            
            <br />
            <br />
            <b> Date of Birth :</b>
            <br />
            <br />
                @Html.EditorFor(model => model.dob, new { htmlAttributes = new { @class = "form-control ", @type = "date", @style="width:18% !important" } })
                <br /><br />
                <button class=" btn btn-primary mt-2" type="submit" onclick="hi()">Search</button>

</form>

</div>
<script>
    function hi() {
        swal({
            title: "Information Loading",
            /*icon: "success",*/
            /* timer: 6000,*/
            showConfirmButton: false
        });


    }

</script>