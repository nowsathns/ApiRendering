<script src="js/sweetalert.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/sweetalert.css">

@model ApiRendering.Models.APIInput
@{
    ViewData["Title"] = "Driving License Search";
}
<div style="padding-top:10px;min-height:300px;">
    <form action="~/Home/DLSearch" method="post">
        Card Number : @Html.TextBoxFor(model => model.cardNumber) <br /><br />
        @*Date of Birth : @Html.TextBoxFor(model => model.dob, "", new { placeholder = "dd/MM/YYYY" }) <br /><br />*@
        <button type="submit" onclick="hi()">Search</button>

    </form>

</div>
<script>
    function hi() {
        swal({
            title: "Information Loading",
            /*icon: "success",*/
            /* timer: 6000,*/
            showConfirmButton: true
        });


    }

</script>